# Production Environment Configuration
# Copy this file to .env when deploying to production

# Database Configuration (PostgreSQL)
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=sitekol_production
DB_USERNAME=your-production-db-user
DB_PASSWORD=your-production-db-password

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secure-production-jwt-secret-minimum-32-characters-long
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3000
NODE_ENV=production
API_VERSION=v1

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@yourdomain.com
SMTP_PASS=your-production-app-password
SMTP_FROM=SITEKOL <noreply@yourdomain.com>

# File Upload Configuration
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# Metal Rates API Configuration
METAL_RATES_API_URL=https://api.metalpriceapi.com/v1/latest
METAL_RATES_API_KEY=your-production-api-key
METAL_RATES_BASE_CURRENCY=USD
METAL_RATES_CURRENCIES=EUR,XAU,XAG,XPD,XPT
METAL_RATES_UPDATE_INTERVAL=3600
METAL_RATES_CACHE_EXPIRY=1800

# Sitekol-specific Encryption (matching frontend)
ENCRYPTION_SEED=nTJEL7u6pE3hIB5y

# Query Limits Configuration
DEFAULT_WEEKLY_QUERIES=50
PREMIUM_WEEKLY_QUERIES=100

# Redis Configuration (for sessions and caching)
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-production-redis-password

# Logging
LOG_LEVEL=warn
LOG_FILE=logs/production.log

# Rate Limiting (more restrictive in production)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=50

# CORS - IMPORTANT: Only your production domains!
# Multiple domains separated by commas
# Examples:
# Single domain: https://yourdomain.com
# Multiple domains: https://yourdomain.com,https://app.yourdomain.com,https://admin.yourdomain.com
CORS_ORIGIN=https://yourdomain.com
